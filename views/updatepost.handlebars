<div class="text-center">
  <form class="form update-blogpost-form">
      <div class="form-group">
        <label for="blogpost-title">title:</label>
        <input class="form-input" type="text" id="blogpost-title" name="blogpost-title" value="{{title}}"/>
      </div>
      <div class="form-group">
        <label for="blogpost-content">content:</label>
        <textarea class="form-input" id="blogpost-content" name="blogpost-content">{{content}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Update Post</button>
      </div>
      <div class="editPost">
         {{!-- class="col-md-4" --}}
        <button class="btn btn-primary" data-id="{{id}}">DELETE</button>
      </div>
    </form>
</div>

<script src="/js/updatepost.js"></script>

