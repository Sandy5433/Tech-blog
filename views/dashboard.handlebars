<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Your Dashboard</h3>
    <a href="/create-post"><button id="newPostBtn">Create New Post</button></a>
    
  </div>

  {{#if blogposts.length}}
  <div class="col-md-6 blogpost-list">
    <h3>Current Posts:</h3>

    {{#each blogposts as |blogpost|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/update-post/{{blogpost.id}}">{{blogpost.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{blogpost.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>


